#include "gpio.ceu"
#include "wclock.ceu"

output on/off PIN_11;
output on/off PIN_12;
output on/off PIN_13;

code/await Blink (var int pin, var int ms) -> NEVER do
    loop do
        emit PIN_OUT(pin,on);
        await (ms)ms;
        emit PIN_OUT(pin,off);
        await (ms)ms;
    end
end

spawn Blink(11, 1000);
spawn Blink(12,  500);
spawn Blink(13,  250);

await FOREVER;
